# BIGPIAI Environment Configuration
# Copy this file to .env and fill in your actual values

# Flask Configuration (REQUIRED)
SECRET_KEY=your-secret-key-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
FLASK_ENV=development
FLASK_DEBUG=1

# Production Settings
PRODUCTION=false
USE_WAITRESS=false

# AI Configuration (REQUIRED for full functionality)
# Phase 1 & 2 require OpenAI API key
OPENAI_API_KEY=your-openai-api-key-here
# Phase 3 requires Gemini API key
GEMINI_API_KEY=your-gemini-api-key-here

# File Upload Settings
MAX_CONTENT_LENGTH=16777216  # 16MB in bytes
UPLOAD_FOLDER=uploads
OUTPUT_FOLDER=outputs

# Server Configuration
HOST=0.0.0.0
PORT=5000
WORKERS=4  # Number of Gunicorn workers for production

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/bigpiai.log

# Database Configuration (if needed in future)
# DATABASE_URL=sqlite:///bigpiai.db
