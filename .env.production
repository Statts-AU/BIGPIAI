# BIGPIAI Production Environment Configuration
# For Windows VM deployment at IP: 4.147.177.22

# Flask Configuration
SECRET_KEY=bigpiai-production-secret-key-2024-vm
JWT_SECRET_KEY=bigpiai-jwt-production-secret-2024-vm
FLASK_ENV=production
FLASK_DEBUG=0

# Production Settings
PRODUCTION=true
USE_WAITRESS=true

# AI Configuration (Required for Phase 3 CV Processing)
# TODO: Add your actual Gemini API key here
GEMINI_API_KEY=your-gemini-api-key-here

# OpenAI Configuration (Required for Phase 1&2)
# TODO: Add your actual OpenAI API key here
OPENAI_API_KEY=your-openai-api-key-here

# Database Configuration (if needed)
# DATABASE_URL=sqlite:///bigpiai.db

# File Upload Settings
MAX_CONTENT_LENGTH=16777216  # 16MB in bytes
UPLOAD_FOLDER=uploads
OUTPUT_FOLDER=outputs

# Server Configuration for VM Access
HOST=0.0.0.0  # Bind to all network interfaces
PORT=80       # Use port 80 for direct access without port number
WORKERS=4     # Number of worker threads

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/bigpiai.log

# Windows VM Specific Settings
PYTHONUNBUFFERED=1
FLASK_SKIP_DOTENV=0
